@inherits LayoutComponentBase

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="menu" @onclick="ToggleMenu"></MatIconButton>
                <MatAppBarTitle>BlazorWasm</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.Start">
    
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
 
    <MatAppBarContent>
        <MatDrawerContainer Style="padding:20px">
            <MatDrawer @bind-Opened="@Opened">
                <MatList>
                    <MatListItem Href="/">
                        Home
                    </MatListItem>
                    <MatDivider></MatDivider>
                    <MatListItem Href="/fetchdata">
                        Fetch Data
                    </MatListItem>
                    <MatDivider></MatDivider>
                    <MatListItem Href="/counter">
                        Counter
                    </MatListItem>
                </MatList>
            </MatDrawer>
            <MatDrawerContent>
                @Body
            </MatDrawerContent>
        </MatDrawerContainer>
       
    </MatAppBarContent>
</MatAppBarContainer>
      

@code{
    bool Opened = true;
 
    void ToggleMenu()
    {
        Opened = !Opened;
    }
}